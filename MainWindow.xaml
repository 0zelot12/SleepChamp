<Window x:Class="SleepChamp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sleep Champ" Height="480" Width="640"
        Background="#FF1E1E1E">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Sleep Champ" 
                       FontSize="36" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,0,0,20" />

            <TextBox Name="TimerLengthText" PreviewTextInput="TimerLengthText_PreviewTextInput"  Margin="0,0,0, 20" />
            
            <Button Content="Start Timer" 
                    Width="150" Height="40"
                    Margin="0,0,0,20" Click="Button_OnClick" />
            
            <TextBlock Text="00:00 remaining" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
        </StackPanel>
    </Grid>
</Window>